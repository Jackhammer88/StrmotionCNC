                        <GradientStop Offset="0.5" Color="#FFAFC8E0" />
                    </LinearGradientBrush>
                </smen:Smenu.Background>

                <Button Command="{Binding Btn1Command}" Style="{DynamicResource ButtonStyle1}" Template="{StaticResource ButtonBaseControlTemplate1}" Content="Btn1" Width="70" Height="30"/>
